#!/bin/bash

# Load global variables and functions
source $(dirname "$(dirname "${BASH_SOURCE[0]}")")/lib/globals.sh

# Commands directory
COMMANDS_DIR=$(dirname "${BASH_SOURCE[0]}")/commands

# Display version information
if [[ "$1" == "-v" || "$1" == "--version" ]]; then
  echo "dog tool - version ${DOG_VERSION}"
  exit 0
fi

# Display help information
if [[ "$1" == "-h" || "$1" == "--help" || -z "$1" ]]; then
  echo "Usage: dog <command> [arguments...]"
  echo "Available commands:"
  echo ""
  
  # Get commands and their descriptions
  for cmd_file in ${COMMANDS_DIR}/*.sh; do
    if [ -f "$cmd_file" ]; then
      cmd_name=$(basename "$cmd_file" .sh)
      description=$(grep "^# Description:" "$cmd_file" | sed 's/^# Description: //' | head -1)
      if [ -z "$description" ]; then
        description="无描述"
      fi
      printf "  %-14s %s\n" "$cmd_name" "$description"
    fi
  done
  exit 0
fi

# Check if command exists
if [[ ! -f "${COMMANDS_DIR}/$1.sh" ]]; then
  echo "Error: Unknown command '$1'"
  echo "Run 'dog --help' to see available commands"
  exit 1
fi

# Execute command
CMD=$1
shift
source "${COMMANDS_DIR}/$CMD.sh" "$@"
